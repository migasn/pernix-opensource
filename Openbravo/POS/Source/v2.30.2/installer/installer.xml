<project>
    <shortName>PernixOBPOS</shortName>
    <fullName>Pernix OB POS</fullName>
    <version>2.30.2</version>
    <readmeFile>../README</readmeFile>
    <licenseFile>../licensing/gpl-2.0.txt</licenseFile>
    <leftImage>images/leftbar.png</leftImage>
    <logoImage>images/pernix.png</logoImage>
    <splashImage>images/POS_Splash.png</splashImage>
    <defaultLanguage>es</defaultLanguage>
    <description>Openbravo POS is a point of sale designed for touch screens</description>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <outputDirectory>../build/installer</outputDirectory>
    <release>3</release>
    <requireInstallationByRootUser>1</requireInstallationByRootUser>
    <saveRelativePaths>1</saveRelativePaths>
    <summary>POS</summary>
    <vendor>Pernix</vendor>
    <componentList>
        <component>
            <name>default</name>
            <description>Pernix OB POS</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>Personalización Pernix para Openbravo Punto de Venta. El sistema Openbravo POS fue diseñado para pantallas táctiles</comment>
                    <exec>openbravopos</exec>
                    <icon>pernix.png</icon>
                    <name>${product_fullname}</name>
                    <path>${installdir}</path>
                    <platforms>all</platforms>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/start.bat</windowsExec>
                    <windowsExecArgs>${installdir}/start.bat</windowsExecArgs>
                    <windowsIcon>${installdir}\pernix.ico</windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../configure.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../configure.sh</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../README</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../start.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../start.sh</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../dist/openbravopos.jar</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>../lib</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../licensing</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../locales</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../reports</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>images/pernix.png</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>images/pernix.ico</origin>
                        </distributionFile>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                        <shortcut>
                            <comment>Personalización Pernix para Openbravo Punto de Venta. El sistema Openbravo POS fue diseñado para pantallas táctiles </comment>
                            <exec>openbravopos</exec>
                            <icon>${installdir}/pernix.png</icon>
                            <name>${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/start.bat</windowsExec>
                            <windowsExecArgs>${installdir}/start.bat</windowsExecArgs>
                            <windowsIcon>${installdir}\pernix.ico</windowsIcon>
                            <windowsPath>${installdir}\</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>images/pernix.ico</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>images/pernix.png</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>DEB</description>
                    <destination>${installdir}</destination>
                    <name>openbravopos-linux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>DEB1</description>
                    <destination>/usr/share/icons</destination>
                    <name>openbravoposiscon</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>DEB2</description>
                    <destination>/usr/share/applications</destination>
                    <name>openbravopos2</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>DEB4</description>
                    <destination>/usr/bin/</destination>
                    <name>openbravopos54</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>linux-x64</description>
                    <destination>${installdir}</destination>
                    <name>openbravopos-linux-x64</name>
                    <platforms>linux-x64</platforms>
                </folder>
                <folder>
                    <description>linux-ia64</description>
                    <destination>${installdir}</destination>
                    <name>openbravopos-linux-ia64</name>
                    <platforms>linux-ia64</platforms>
                </folder>
                <folder>
                    <description>osx</description>
                    <destination>${installdir}</destination>
                    <name>openbravopos-osx</name>
                    <platforms>osx</platforms>
                </folder>
                <folder>
                    <description>solaris-intel</description>
                    <destination>${installdir}</destination>
                    <name>openbravopos-solaris-intel</name>
                    <platforms>solaris-intel</platforms>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}\pernix.ico</windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Personalización Pernix para Openbravo Punto de Venta. El sistema Openbravo POS fue diseñado para pantallas táctiles </comment>
                    <name>${product_fullname}</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}\start.bat</windowsExec>
                    <windowsExecArgs>${installdir}\start.bat</windowsExecArgs>
                    <windowsIcon>${installdir}\pernix.ico</windowsIcon>
                    <windowsPath>${installdir}\</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Configurar la personalización Pernix para Openbravo Punto de Venta. El sistema Openbravo POS fue diseñado para pantallas táctiles </comment>
                    <name>Configurar ${product_fullname}</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}\configure.bat</windowsExec>
                    <windowsExecArgs>${installdir}\configure.bat</windowsExecArgs>
                    <windowsIcon>${installdir}\pernix.ico</windowsIcon>
                    <windowsPath>${installdir}\</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <finalPageActionList>
        <runProgram>
            <customErrorMessage>No se ha podido ejecutar el programa de configuración del sistema

</customErrorMessage>
            <program>${installdir}/configure.bat</program>
            <programArguments></programArguments>
            <progressText>Ejecutar programa de configuración del sistema

.</progressText>
            <useMSDOSPath>0</useMSDOSPath>
            <workingDirectory>${installdir}/</workingDirectory>
        </runProgram>
    </finalPageActionList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value>${platform_install_prefix}/${product_shortname}-${product_version}</value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <description>Openbravo POS is a point of sale designed for touch screens</description>
            <platform>debian</platform>
            <release>1</release>
            <summary>POS</summary>
            <vendor>Openbravo</vendor>
        </platformOptions>
    </platformOptionsList>
</project>

